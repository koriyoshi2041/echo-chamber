/*
  # Security Headers
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: camera=(), microphone=(), geolocation=(), payment=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline' fonts.googleapis.com; font-src 'self' fonts.gstatic.com; img-src 'self' data:; connect-src 'self'; frame-ancestors 'none'; base-uri 'self'; form-action 'self'
  
  # Performance Headers
  Cache-Control: public, max-age=31536000, immutable

/*.html
  # Cache HTML for shorter time
  Cache-Control: public, max-age=3600

/*.css
  # Cache CSS
  Cache-Control: public, max-age=31536000, immutable

/*.js
  # Cache JavaScript
  Cache-Control: public, max-age=31536000, immutable

/*.json
  # Cache JSON files
  Cache-Control: public, max-age=86400

/manifest.json
  # Cache manifest
  Cache-Control: public, max-age=86400

/service-worker.js
  # Don't cache service worker
  Cache-Control: no-cache, no-store, must-revalidate
  
/assets/*
  # Cache assets for a long time
  Cache-Control: public, max-age=31536000, immutable

/*.css
  Cache-Control: public, max-age=86400
  
/*.js
  Cache-Control: public, max-age=86400

/assets/css/*.css
  Cache-Control: public, max-age=3600

/assets/js/*.js
  Cache-Control: public, max-age=3600

# 游戏目录 - 宽松的CSP策略（必须放在最前面）
/9o9xlpa/*
  Content-Security-Policy: default-src 'self' 'unsafe-inline' 'unsafe-eval' data: blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.tailwindcss.com https://unpkg.com https://esm.run; style-src 'self' 'unsafe-inline' https://cdn.tailwindcss.com; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' https://cdn.tailwindcss.com https://unpkg.com https://esm.run; frame-ancestors 'self' https://echocham.netlify.app localhost:*;
  X-Frame-Options: SAMEORIGIN
  Cache-Control: public, max-age=86400

# Service Worker不缓存
/service-worker.js
  Cache-Control: no-cache, no-store, must-revalidate

# 静态资源长期缓存
/assets/*
  Cache-Control: public, max-age=31536000, immutable

